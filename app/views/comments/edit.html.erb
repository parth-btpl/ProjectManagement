<div class="main-wrap">
  <div class="content">
    <div class="container-fluid">
      <div class="row">
        <div class="col-md-8">
          <div class="card">
            <div class="card-header card-header-primary">
              <h4 class="card-title">Edit Comment</h4>
            </div>
            <div class="card-body">
              <div class="row">
                <div class="col-sm-6">
                  <%= form_for :comment, url: project_task_comment_path(@task, @comment, project_id: @task.project.id), method: :patch do |f| %>
                    <div class="form-group">
                      <%= f.text_area :description, class: "form-control", rows: 5, required: true %>
                    </div>

                    <div class="form-group col-sm-12">
                      <%= f.label :pictures, class: "form-control-label" %>
                      <div class="custom-file">
                        <%= f.file_field :pictures, multiple: true, class: "custom-file-input", id:"customFile" %>
                        <label class="custom-file-label" for="customFile">Choose image</label>
                      </div>
                    </div>

                    <div class="bottom-btn two-btn btn-row">
                      <%= f.submit "edit comment", class: "btn btn-primary btn-sm" %>
                    </div>
                  <% end %>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
