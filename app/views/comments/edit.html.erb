<div class="main-wrap">
  <section class="edit-comment">
    <header>
      <h1>
        Edit comment
      </h1>
    </header>

    <div class="row">
      <div class="col-sm-6">
        <%= form_for :comment, url: project_task_comment_path(@task, @comment, project_id: @task.project.id), method: :patch do |f| %>
          <div class="form-group">
            <%= f.text_area :description, class: "form-control", rows: 10, required: true %>
          </div>

          <div class="form-group col-sm-12">
            <%= f.label :pictures, class: "form-control-label" %>
            <div class="custom-file">
              <%= f.file_field :pictures, multiple: true, class: "custom-file-input", id:"customFile" %>
              <label class="custom-file-label" for="customFile">Choose image</label>
            </div>
          </div>

          <div class="form-group">
            <%= f.submit "edit comment", class: "btn btn-success" %>
          </div>
        <% end %>
      </div>
    </div>
  </section>
</div>
