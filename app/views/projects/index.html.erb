<div class="main-wrap">
  <div class="wrapper ">
    <div class="content">
      <div class="container-fluid">
        <div class="row">
          <div class="card">
            <div class="card-header card-header-primary">
              <h4 class="card-title "><b>Total Project - <%= Project.count %></b></h4>
              <%= link_to new_project_path, class: 'btn btn-primary btn-sm float-right' do %>
                <i class="fa fa-plus left" aria-hidden="true"></i> <span>Project</span>
              <% end %>
            </div>
            <div class="card-body">
              <div class='row mb-2'>
                <div class="col-md-12">
                  <%= search_form_for @q, url: projects_path do |f| %>
                    <div class="input-group">
                      <%= f.search_field :search_cont, value: params.dig('q', 'search_cont'), class: 'form-control search', placeholder: "Search projects by name..."  %>
                      <div class="input-group-append">
                        <%= f.submit "search", class: "btn btn-outline-primary btn-sm" %>
                      </div>
                    </div>  
                  <% end %>
                </div>
              </div>
              <div class="table-responsive">
                <% if @projects.present? %>
                  <table class="table">
                    <thead>
                      <tr>
                        <th scope="col">#</th>
                        <th scope="col"><%= sort_link(@q, :name) %></th>
                        <th scope="col"><%= sort_link(@q, :status) %></th>
                        <th scope="col"><%= sort_link(@q, :start_date) %></th>
                        <th scope="col"><%= sort_link(@q, :end_date) %></th>
                        <th scope="col"><%= sort_link(@q, :internal_demo_date) %></th>
                        <th scope="col" colspan="2">Action</th>
                      </tr>
                    </thead>
                    <tbody>
                      <% @projects.each_with_index do |project, index| %>
                        <tr>
                          <td scope="row"><%= index_count_increment(index) %></td>
                          <td scope="row"><%= link_to humanize_data(project.name), project_tasks_path(project_id: project.id) %></td>
                          <td scope="row"><%= humanize_data(project.status) %></td>
                          <td scope="row"><%= formatted_date(project.start_date) %></td>
                          <td scope="row"><%= formatted_date(project.end_date) %></td>
                          <td scope="row"><%= formatted_date(project.internal_demo_date) %></td>
                          <td scope="row">
                            <%= link_to edit_project_path(id: project.id) do %>
                              <i class='fa fa-edit pd-6' data-placement="bottom" title='Edit'></i>
                            <% end %>
                            <%= link_to project_path(id: project.id), method: :delete, data: { confirm: "Are you sure want to delete project?" }, class: 'confirm disable-right-click' do %>
                              <i class='fa fa-trash pd-6' data-placement="bottom" title='Delete'></i>
                            <% end %>
                          </td>
                        </tr>
                      <% end %>
                    </tbody>
                  </table>
                  <%= paginate @projects %>
                <% end %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
